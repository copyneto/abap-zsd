<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:u="sap.ui.unified"                                                                                                                                                                       
	xmlns:l="sap.ui.layout">                                                                                                                                                                                                                                      
	<l:VerticalLayout core:require="{handler: 'br/com/trescoracoes/geracaoordemvendas/ext/fragment/upload'}">                                                                                                                                                     
	<MessageStrip                                                                                                                                                                                                                                                 
			type="Information"                                                                                                                                                                                                                                          
			showIcon="true"                                                                                                                                                                                                                                             
			text="Atenção: Ao selecionar o arquivo, clique no botão 'Carregar Arquivo'.&nbsp;                                                                                                                                                                           
			      Após carregar arquivo, clicar 'Criar' para gerar Ordens de Vendas. "                                                                                                                                                                                  
			class="sapUiSmallMarginBottom"                                                                                                                                                                                                                              
			 />                                                                                                                                                                                                                                                         
			                                                                                                                                                                                                                                                            
		<u:FileUploader                                                                                                                                                                                                                                              
			id="fileUploader"                                                                                                                                                                                                                                           
			name="myFileUpload"                                                                                                                                                                                                                                         
			uploadUrl="upload/"                                                                                                                                                                                                                                         
			tooltip="Upload your file to the local server"                                                                                                                                                                                                              
			uploadComplete="handler.handleUploadComplete"                                                                                                                                                                                                               
			change="handleValueChange"                                                                                                                                                                                                                                  
			typeMissmatch="handleTypeMissmatch"                                                                                                                                                                                                                         
			style="Emphasized"                                                                                                                                                                                                                                          
			fileType="xlsx"                                                                                                                                                                                                                                             
			placeholder="Carregar arquivo Excel">                                                                                                                                                                                                                       
				<u:parameters>                                                                                                                                                                                                                                             
					<u:FileUploaderParameter                                                                                                                                                                                                                                  
						name="param1"                                                                                                                                                                                                                                            
						value="Foo"/>                                                                                                                                                                                                                                            
					<u:FileUploaderParameter                                                                                                                                                                                                                                  
						name="param2"                                                                                                                                                                                                                                            
						value="bar"/>                                                                                                                                                                                                                                            
				</u:parameters>                                                                                                                                                                                                                                            
				<u:headerParameters>                                                                                                                                                                                                                                       
					<u:FileUploaderParameter                                                                                                                                                                                                                                  
						name="headerParam1"                                                                                                                                                                                                                                      
						value="Foo"/>                                                                                                                                                                                                                                            
					<u:FileUploaderParameter                                                                                                                                                                                                                                  
						name="headerParam2"                                                                                                                                                                                                                                      
						value="bar"/>                                                                                                                                                                                                                                            
				</u:headerParameters>                                                                                                                                                                                                                                      
			</u:FileUploader>                                                                                                                                                                                                                                           
		<Button                                                                                                                                                                                                                                                      
			text="Carregar Arquivo"                                                                                                                                                                                                                                     
			press="handler.handleUploadPress"                                                                                                                                                                                                                           
			type= 'Accept' />                                                                                                                                                                                                                                           
			                                                                                                                                                                                                                                                            
	</l:VerticalLayout>                                                                                                                                                                                                                                           
</core:FragmentDefinition>                                                                                                                                                                                                                                     