FORM DB_UPD_ZVSD_GNRET012 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVSD_GNRET012.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVSD_GNRET012-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTSD_GNRET012 WHERE
  BUKRS = ZVSD_GNRET012-BUKRS AND
  HBKID = ZVSD_GNRET012-HBKID .
    IF SY-SUBRC = 0.
    DELETE ZTSD_GNRET012 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTSD_GNRET012 WHERE
  BUKRS = ZVSD_GNRET012-BUKRS AND
  HBKID = ZVSD_GNRET012-HBKID .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTSD_GNRET012.
    ENDIF.
ZTSD_GNRET012-MANDT =
ZVSD_GNRET012-MANDT .
ZTSD_GNRET012-BUKRS =
ZVSD_GNRET012-BUKRS .
ZTSD_GNRET012-HBKID =
ZVSD_GNRET012-HBKID .
ZTSD_GNRET012-REPORT =
ZVSD_GNRET012-REPORT .
ZTSD_GNRET012-VARIANT =
ZVSD_GNRET012-VARIANT .
    IF SY-SUBRC = 0.
    UPDATE ZTSD_GNRET012 ##WARN_OK.
    ELSE.
    INSERT ZTSD_GNRET012 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZVSD_GNRET012-UPD_FLAG,
STATUS_ZVSD_GNRET012-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
