FORM GET_DATA_ZVSD_GNRET013.
  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM ZTSD_GNRET013 WHERE
(VIM_WHERETAB) .
    CLEAR ZVSD_GNRET013 .
ZVSD_GNRET013-MANDT =
ZTSD_GNRET013-MANDT .
ZVSD_GNRET013-RECEITA =
ZTSD_GNRET013-RECEITA .
ZVSD_GNRET013-DESC_RECEITA =
ZTSD_GNRET013-DESC_RECEITA .
ZVSD_GNRET013-RECEITA_EXIB =
ZTSD_GNRET013-RECEITA_EXIB .
ZVSD_GNRET013-REGIO =
ZTSD_GNRET013-REGIO .
<VIM_TOTAL_STRUC> = ZVSD_GNRET013.
    APPEND TOTAL.
  ENDSELECT.
  SORT TOTAL BY <VIM_XTOTAL_KEY>.
  <STATUS>-ALR_SORTED = 'R'.
*.check dynamic selectoptions (not in DDIC)...........................*
  IF X_HEADER-SELECTION NE SPACE.
    PERFORM CHECK_DYNAMIC_SELECT_OPTIONS.
  ELSEIF X_HEADER-DELMDTFLAG NE SPACE.
    PERFORM BUILD_MAINKEY_TAB.
  ENDIF.
  REFRESH EXTRACT.
ENDFORM.
*---------------------------------------------------------------------*
FORM DB_UPD_ZVSD_GNRET013 .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVSD_GNRET013.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVSD_GNRET013-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTSD_GNRET013 WHERE
  RECEITA = ZVSD_GNRET013-RECEITA .
    IF SY-SUBRC = 0.
    DELETE ZTSD_GNRET013 .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTSD_GNRET013 WHERE
  RECEITA = ZVSD_GNRET013-RECEITA .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTSD_GNRET013.
    ENDIF.
ZTSD_GNRET013-MANDT =
ZVSD_GNRET013-MANDT .
ZTSD_GNRET013-RECEITA =
ZVSD_GNRET013-RECEITA .
ZTSD_GNRET013-DESC_RECEITA =
ZVSD_GNRET013-DESC_RECEITA .
ZTSD_GNRET013-RECEITA_EXIB =
ZVSD_GNRET013-RECEITA_EXIB .
ZTSD_GNRET013-REGIO =
ZVSD_GNRET013-REGIO .
    IF SY-SUBRC = 0.
    UPDATE ZTSD_GNRET013 ##WARN_OK.
    ELSE.
    INSERT ZTSD_GNRET013 .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZVSD_GNRET013-UPD_FLAG,
STATUS_ZVSD_GNRET013-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
