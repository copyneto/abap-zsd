FORM DB_UPD_ZVSD_IPI .
*.process data base updates/inserts/deletes.........................*
LOOP AT TOTAL.
  CHECK <ACTION> NE ORIGINAL.
MOVE <VIM_TOTAL_STRUC> TO ZVSD_IPI.
  IF <ACTION> = UPDATE_GELOESCHT.
    <ACTION> = GELOESCHT.
  ENDIF.
  CASE <ACTION>.
   WHEN NEUER_GELOESCHT.
IF STATUS_ZVSD_IPI-ST_DELETE EQ GELOESCHT.
     READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
     IF SY-SUBRC EQ 0.
       DELETE EXTRACT INDEX SY-TABIX.
     ENDIF.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN GELOESCHT.
  SELECT SINGLE FOR UPDATE * FROM ZTSD_IPI WHERE
  WERKS = ZVSD_IPI-WERKS AND
  TXJCD = ZVSD_IPI-TXJCD AND
  BRSCH = ZVSD_IPI-BRSCH AND
  MATKL = ZVSD_IPI-MATKL .
    IF SY-SUBRC = 0.
    DELETE ZTSD_IPI .
    ENDIF.
    IF STATUS-DELETE EQ GELOESCHT.
      READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY> BINARY SEARCH.
      DELETE EXTRACT INDEX SY-TABIX.
    ENDIF.
    DELETE TOTAL.
    IF X_HEADER-DELMDTFLAG NE SPACE.
      PERFORM DELETE_FROM_MAINKEY_TAB.
    ENDIF.
   WHEN OTHERS.
  SELECT SINGLE FOR UPDATE * FROM ZTSD_IPI WHERE
  WERKS = ZVSD_IPI-WERKS AND
  TXJCD = ZVSD_IPI-TXJCD AND
  BRSCH = ZVSD_IPI-BRSCH AND
  MATKL = ZVSD_IPI-MATKL .
    IF SY-SUBRC <> 0.   "insert preprocessing: init WA
      CLEAR ZTSD_IPI.
    ENDIF.
ZTSD_IPI-CLIENT =
ZVSD_IPI-CLIENT .
ZTSD_IPI-WERKS =
ZVSD_IPI-WERKS .
ZTSD_IPI-TXJCD =
ZVSD_IPI-TXJCD .
ZTSD_IPI-BRSCH =
ZVSD_IPI-BRSCH .
ZTSD_IPI-MATKL =
ZVSD_IPI-MATKL .
ZTSD_IPI-TAXLAW =
ZVSD_IPI-TAXLAW .
    IF SY-SUBRC = 0.
    UPDATE ZTSD_IPI ##WARN_OK.
    ELSE.
    INSERT ZTSD_IPI .
    ENDIF.
    READ TABLE EXTRACT WITH KEY <VIM_XTOTAL_KEY>.
    IF SY-SUBRC EQ 0.
      <XACT> = ORIGINAL.
      MODIFY EXTRACT INDEX SY-TABIX.
    ENDIF.
    <ACTION> = ORIGINAL.
    MODIFY TOTAL.
  ENDCASE.
ENDLOOP.
CLEAR: STATUS_ZVSD_IPI-UPD_FLAG,
STATUS_ZVSD_IPI-UPD_CHECKD.
MESSAGE S018(SV).
ENDFORM.
