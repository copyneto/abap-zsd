  PERFORM VIM_FILL_WHERETAB.
*.read data from database.............................................*
  REFRESH TOTAL.
  CLEAR   TOTAL.
  SELECT * FROM ZTSD_IPI WHERE
(VIM_WHERETAB) .
    CLEAR ZVSD_IPI .
ZVSD_IPI-CLIENT =
